<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.home.CreateRide3Fragment"
    android:background="?attr/colorSecondaryVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:padding="10sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_ride_title3"
            android:fontFamily="@font/righteous"
            android:textStyle="bold"
            android:textColor="?attr/colorSecondary"
            android:textSize="30sp"
            android:layout_marginBottom="30sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pet_transport"
                android:layout_marginEnd="15dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baby_transport"
                android:layout_marginStart="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="15sp"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="230sp"
                    android:layout_height="35sp"
                    android:text="@string/order_time"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.2dp"
                    android:id="@+id/separator"
                    android:visibility="visible"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:src="@drawable/ic_time"
                android:background="?attr/colorSecondaryVariant"
                android:contentDescription="@string/set_marker"/>

        </LinearLayout>

        <TextView
            android:id="@+id/favorites_button"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/greenDefault"
            android:text="@string/add_favorites"
            android:textColor="@color/favorites"
            android:textSize="16sp"
            android:textStyle="bold" />
            <Button
                android:id="@+id/confirm"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginTop="20sp"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_gravity="center"
                android:text="@string/order"
                android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>