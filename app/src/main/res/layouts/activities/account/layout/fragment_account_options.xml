<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.account.AccountOptionsFragment"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/firstCard"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10sp"
            android:layout_marginTop="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:id="@+id/firstBtn"
                android:layout_width="300sp"
                android:layout_height="80sp"
                android:background="?attr/carousel_firstView"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accountData"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:src="@mipmap/edit_account" />

                <TextView
                    android:id="@+id/accountDataEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/view_account_data"
                    android:textSize="17sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>