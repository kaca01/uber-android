<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.dialogs.LeavingReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10sp"
        tools:ignore="UselessParent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/leave_your_review"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="?attr/colorSecondary"
        android:layout_marginBottom="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_the_driver"
        android:layout_gravity="center_vertical"
        android:textSize="17sp"
        android:layout_marginBottom="10sp"/>

    <RatingBar
        android:id="@+id/driver_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="1"
        android:progressTint="?attr/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us how you liked the driver!"
        android:textSize="15sp"
        android:layout_marginTop="10sp"/>


    <EditText
        android:id="@+id/driver_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="1"
        android:scrollbars="vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rate_the_car"
        android:layout_gravity="center_vertical"
        android:textSize="17sp"
        android:layout_marginTop="30sp"/>

    <RatingBar
        android:id="@+id/vehicle_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stepSize="1"
        android:progressTint="?attr/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us how you liked the car!"
        android:textSize="15sp"
        android:layout_marginTop="10sp"/>

    <EditText
        android:id="@+id/vehicle_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="1"
        android:scrollbars="vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp">

            <Button
                android:id="@+id/later"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:text="Later" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/done"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="?attr/colorPrimary"
                android:text="Done"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>