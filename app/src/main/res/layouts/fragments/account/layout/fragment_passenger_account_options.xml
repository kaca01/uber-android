<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accountOptions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.account.PassengerAccountOptionsFragment"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/firstCard"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            app:cardCornerRadius="10sp">

            <LinearLayout
                android:id="@+id/firstBtn"
                android:layout_width="300sp"
                android:layout_height="80sp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:background="?attr/carousel_firstView">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:src="@mipmap/favorite_locations" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:layout_marginEnd="30px"
                    android:layout_gravity="center"
                    android:text="@string/check_favorite_locations" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>