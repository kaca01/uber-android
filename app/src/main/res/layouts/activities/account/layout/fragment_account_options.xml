<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.account.AccountOptionsFragment"
    android:layout_marginTop="10sp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <RelativeLayout
        android:layout_width="305sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/firstCard"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginStart="5sp"
            app:cardCornerRadius="10sp">


            <LinearLayout
                android:id="@+id/firstBtn"
                android:layout_width="300sp"
                android:layout_height="80sp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:background="#F0F0F0"
                >
                <ImageView
                    android:id="@+id/accountData"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:src="@mipmap/edit_account" />

                <TextView
                    android:id="@+id/accountDataEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12sp"
                    android:textSize="17sp"
                    android:text="@string/view_account_data" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/secondCard"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120sp"
            android:layout_marginStart="5sp"
            android:layout_marginBottom="5sp"
            app:cardCornerRadius="10sp"
           >

            <LinearLayout
                android:id="@+id/secondBtn"
                android:layout_width="300sp"
                android:layout_height="80sp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:background="#F0F0F0">
                <ImageView
                    android:id="@+id/resumePic"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:src="@mipmap/reports" />

                <TextView
                    android:id="@+id/editAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="30sp"
                    android:textSize="17sp"
                    android:text="@string/view_reports" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>