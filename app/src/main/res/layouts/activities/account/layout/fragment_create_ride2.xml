<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.home.CreateRide2Fragment"
    android:background="?attr/colorSecondaryVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:padding="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_ride_title2"
            android:fontFamily="@font/righteous"
            android:textStyle="bold"
            android:textColor="?attr/colorSecondary"
            android:textSize="35sp"
            android:layout_marginBottom="25sp"/>

        <Spinner
            android:id="@+id/vehicle_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/new_passenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:autofillHints="new passenger"
                android:hint="@string/new_passenger"
                android:layout_toStartOf="@+id/add_button"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:inputType="text"
                android:minHeight="50sp"
                android:selectAllOnFocus="true"/>
            <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:text="@string/add"
                android:textColor="?attr/colorSecondary"
                />
        </RelativeLayout>

        <ListView
            android:id="@+id/passengers_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

        <Button
            android:id="@+id/confirmSecond"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20sp"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/confirm"
            android:textStyle="bold"/>

    </LinearLayout>

</FrameLayout>